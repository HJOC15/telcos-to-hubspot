#############################################
#               CLARO (Notificame)          #
#############################################
# Credenciales del API de Claro (Notificame)
CLARO_API_KEY=YOUR_CLARO_API_KEY
CLARO_API_SECRET=YOUR_CLARO_API_SECRET
# Base URL del API (dejar el slash final tal cual si tu endpoint lo requiere)
CLARO_BASE_URL=https://notificame.claro.com.gt/v4/api/rest/
# Ventana de días para traer mensajes/contactos de Claro
CLARO_MESSAGES_DAYS=90

#############################################
#           TIGO B2B (Apigee)               #
#############################################
# Host base (no tocar salvo que cambie el entorno)
TIGO_B2B_BASE=https://prod.api.tigo.com/v1
# OrganizationId de Tigo B2B (requerido)
TIGO_B2B_ORG_ID=YOUR_TIGO_ORG_ID
# Bearer token (requerido)
TIGO_B2B_TOKEN=YOUR_TIGO_BEARER_TOKEN
# Si tu entorno requiere API Key/Secret adicionales, colócalos; si no, déjalos vacíos
TIGO_B2B_API_KEY=
TIGO_B2B_API_SECRET=
# Ventana de días por defecto para mensajes/contactos
TIGO_B2B_DAYS=7
# Paginación (el proyecto usa page 1..N con size fijo)
TIGO_PAGE_SIZE=500
# Estrategia de paginación (no tocar)
TIGO_PAGING_SCHEME=pageNumber_pageSize

#############################################
#                HUBSPOT                    #
#############################################
# Access Token (Private App)
HUBSPOT_TOKEN=YOUR_HUBSPOT_PRIVATE_APP_TOKEN

# CONTACTOS
# - idProperty único del contacto (debe existir en HubSpot y ser "unique")
HUBSPOT_ID_PROPERTY=numero_telefono_id_unico
# - objeto de contactos (mantener 0-1 para estándar)
HUBSPOT_CONTACTS_OBJECT=0-1

# MENSAJES (Custom Object)
# - FQN u objectTypeId del custom object de mensajes
#   Ej: "p_mensajes" o el objectTypeId "2-50592224"
HUBSPOT_MESSAGES_OBJECT=2-50592224
# - propiedad única de mensajes
HUBSPOT_MESSAGES_ID_PROPERTY=id_mensaje_unico
# - propiedad requerida adicional usada en el mapeo (si existe en tu portal)
HUBSPOT_MSG_REQUIRED_PROP=id_mensaje

# Asociación Mensaje → Contacto
# - etiqueta (label) del Association Type que usarás (como aparece en HubSpot)
#   Ejemplo: "Contactos"
HUBSPOT_ASSOC_LABEL_MSG_TO_CONTACT=Contactos

# Envío real (si está en "false", no envía a HubSpot aunque se mapee)
SEND_TO_HUBSPOT=true

#############################################
#               SERVIDOR / CRON             #
#############################################
# Puerto HTTP para el server Express
PORT=3000
# Zona horaria para cron (GT)
TIMEZONE=America/Guatemala

# Habilitar scheduler (si usas src/server.js, ya trae sus crons internos)
CRON_ENABLE=true
# Si usas un scheduler externo, puedes aprovechar esta expresión (no obligatorio):
CRON_EXPRESSION=0 8 * * *

#############################################
#         OVERRIDES / OPCIONALES            #
#############################################
# Si por cualquier razón el resolver de objectTypeId falla, puedes forzar IDs:
# HUBSPOT_P_MENSAJES_OBJECT_TYPEID=2-50592224
# HUBSPOT_CONTACTS_OBJECT_TYPEID=0-1

# Ignorar propiedades al upsert de Tigo (coma-separado)
IGNORE_PROPS_TIGO=shortcode,protocolo,tipo_envio

# Límite / tasa de envíos (ms entre lotes)
SYNC_BATCH_SIZE=100
SYNC_RATE_DELAY_MS=250

#######################################################
#      OPCIONAL (DEBUG / DIAGNÓSTICO – dejar en 0)    #
#######################################################
# Encender logs detallados de Sync
DEBUG_SYNC=0
# Encender logs de Claro/Tigo
DEBUG_CLARO=0
DEBUG_TIGO=0
# Desactivar dedupe local (para validar duplicados del origen) – EN PROD: 1
SYNC_DEDUPE=1
# Loggear cada registro en consola (ruidoso)
SYNC_LOG_EACH=0
# Diagnóstico de asociaciones
DEBUG_ASSOC=0
# Auto-crear contacto al asociar (esto ya lo maneja el job de “huérfanos”)
ASSOC_AUTOCREATE_CONTACTS=0
